{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "noEmit": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/config/environment.backend.ts",
    "src/services/backendApiClient.ts",
    "src/services/nexusAgent.ts",
    "src/utils/logger.ts",
    "src/types/backend-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "vite.config.ts",
    "src/components/**/*",
    "src/pages/**/*",
    "src/hooks/**/*",
    "src/contexts/**/*",
    "src/data/**/*",
    "src/integrations/**/*",
    "src/test/**/*",
    "src/utils/uat-testing.ts",
    "src/utils/nexus-test-suite.ts",
    "src/services/FeedbackService.ts",
    "src/services/enterpriseMonitoring.ts",
    "src/services/apiHealthMonitor.ts",
    "src/config/environment.ts"
  ]
}
