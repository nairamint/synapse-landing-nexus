    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "snyk": "^1.1248.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.11",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typedoc": "^0.25.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
