{
  "name": "synapses-grc-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Synapses GRC Platform - Comprehensive Governance, Risk, and Compliance Management System",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "npx nodemon src/server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc --project tsconfig.backend.json",
    "build:dev": "vite build --mode development",
    "start": "node dist/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:backend": "jest",
    "prepare": "husky install",
    "quality:check": "npm run format:check && npm run lint && npm test",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "ts-node --esm scripts/seed.ts",
    "security:scan": "npm audit && snyk test",
    "compliance:check": "ts-node --esm scripts/compliance-check.ts",
    "docs:generate": "typedoc src --out docs/api",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "analyze": "npx vite-bundle-analyzer dist"
  },
  "dependencies": {
